<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/drakPurpleBlue">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingLeft="26dp"
        android:text="SELECT WORKOUT"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/buttonBMI"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/card_background"
        android:paddingLeft="16dp"
        android:text="Calculate BMI"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <android.widget.Button
        android:id="@+id/buttonPedometer"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/card_background"
        android:paddingLeft="16dp"
        android:text="Pedometer"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBMI" />

    <android.widget.Button
        android:id="@+id/buttonTrips"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/card_background"
        android:paddingLeft="16dp"
        android:text="Trips"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPedometer" />


    <android.widget.Button
        android:id="@+id/buttonYoga"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/card_background"
        android:paddingLeft="16dp"
        android:text="Yoga"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTrips" />

</androidx.constraintlayout.widget.ConstraintLayout>